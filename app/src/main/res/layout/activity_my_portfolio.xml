<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/btnSpotifyStreamer"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:background="#0CAADC"
        android:layout_margin="10dp"
        android:textColor="#FFF"
        android:onClick="onClickSpotifyStreamer"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/btnScoresApp"
        android:layout_below="@+id/btnSpotifyStreamer"
        android:layout_centerHorizontal="true"
        android:background="#11B5E4"
        android:layout_margin="10dp"
        android:textColor="#FFF"
        android:onClick="onClickScoresApp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Libary App"
        android:id="@+id/btnLibraryApp"
        android:layout_below="@+id/btnScoresApp"
        android:layout_centerHorizontal="true"
        android:background="#1481BA"
        android:layout_margin="10dp"
        android:textColor="#FFF"
        android:onClick="onClickLibraryApp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Build It bigger"
        android:id="@+id/btnBuildItBigger"
        android:layout_below="@+id/btnLibraryApp"
        android:layout_centerHorizontal="true"
        android:background="#034748"
        android:layout_margin="10dp"
        android:textColor="#FFF"
        android:onClick="onClickBuildItBigger"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/btnXYZReader"
        android:layout_below="@+id/btnBuildItBigger"
        android:layout_centerHorizontal="true"
        android:background="#001021"
        android:layout_margin="10dp"
        android:textColor="#FFF"
        android:onClick="onClickXYZReader"/>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Capstone: Perk's App"
        android:id="@+id/btnCapstone"
        android:layout_below="@+id/btnXYZReader"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:layout_margin="10dp"
        android:textColor="#FFF"
        android:onClick="onClickCapstone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perk&apos;s Nanodegree Apps"
        android:id="@+id/tvTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="20sp" />

</RelativeLayout>
